<%= simple_form_for @css do |f| %>
	<div class="row">
		<div class="col-sm-12 col-md-6">
			<%= f.input :name %>
		</div>
		<div class="col-sm-12 col-md-6">
			<%= f.input :order %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<%= f.input :body, as: :hidden %>
			<textarea id="editor"><%= @css.body %></textarea> 
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12 col-md-6">
			<%= f.input :admin_id, as: :hidden, required: true, input_html: { value: current_admin.id } %>
			<%= f.button :submit, class: 'btn btn-primary' %>
		</div>
	</div>
<% end %>

